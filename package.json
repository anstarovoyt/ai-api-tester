{
  "name": "api-tester",
  "description": "A full-stack API testing tool for OpenAI-compatible APIs, MCP, A2A, and ACP protocols with a built-in CORS proxy server",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm run --prefix packages/frontend dev",
    "build": "npm run --prefix packages/frontend build",
    "typecheck": "npm run --prefix packages/frontend typecheck && tsc -b",
    "build:server": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:acp-runtime": "vitest run packages/acp-runtime",
    "test:server-main": "vitest run packages/server-main",
    "test:server-remote-acp": "vitest run packages/server-remote-acp",
    "test:integration": "npm run build:server && vitest run packages/integration-tests",
    "server": "npm run build:server && node packages/server-main/dist/index.js",
    "server:remote-run": "npm run --prefix packages/server-remote-acp build && node packages/server-remote-acp/dist/remote-run.js",
    "mcp:cli": "npm run --prefix packages/server-main build && node packages/server-main/dist/mcp-cli.js --config mcp-stdio.json",
    "telegram-acp-rm-client": "npm run build:server && node packages/telegram-acp-rm-client/dist/index.js",
    "telegram-acp-rm-client:dev": "npm run --prefix packages/telegram-acp-rm-client dev"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "json5": "^2.2.3",
    "node-ssh": "^13.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "readline-sync": "^1.4.10",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anstarovoyt/ai-api-tester.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/anstarovoyt/ai-api-tester/issues"
  },
  "homepage": "https://github.com/anstarovoyt/ai-api-tester#readme"
}
